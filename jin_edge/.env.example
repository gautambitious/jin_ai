# Jin Edge Environment Variables
# Copy this file to .env and update with your values

# WebSocket connection to backend server
WEBSOCKET_URL=ws://localhost:8000/ws/audio

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Audio settings (JSON format)
# - sample_rate: Audio sample rate in Hz (default: 16000)
# - channels: Number of audio channels (default: 1 for mono)
# - buffer_size: AudioBuffer max size in bytes (default: 1048576 = 1MB)
# - chunk_size: Playback chunk size in bytes (default: 2048)
AUDIO_CONFIG={"sample_rate":16000,"channels":1,"buffer_size":1048576,"chunk_size":2048}

# Connection settings (JSON format)
# - max_retries: Max reconnection attempts (default: 10, 0 = infinite)
# - initial_retry_delay: Initial retry delay in seconds (default: 1.0)
# - max_retry_delay: Maximum retry delay in seconds (default: 60.0)
WS_CONFIG={"max_retries":10,"initial_retry_delay":1.0,"max_retry_delay":60.0}
